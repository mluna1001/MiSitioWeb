@{
    ViewBag.Title = "Edit Education Level";
}

<div id="MainDiv">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <i class="icon-note"></i> Editar - Nivel Educativo
                    <div class="card-actions">
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-6">
                        <form id="formEL" v-on:submit="editEducationLevel">
                            <input id="EducationLevelId" name="EducationLevelId" hidden value="@ViewBag.EducationLevelId" />
                            <div class="form-group">
                                <label for="Description">Nivel Educativo:</label>
                                <input v-model="vModel.Description" type="text" class="form-control" id="Description" aria-describedby="emailHelp" placeholder="Ingrese el Nivel Educativo a guardar">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary" name="Edit" value="Sign up"><i class="fa fa-save"></i> Guardar</button>
                                <a class="btn btn-danger" href="@Url.Action("Index", "NivelesEducativos")"><i class="fa fa-times"></i> Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/axios.min.js"></script>
<script src="~/Scripts/Models/NivelEducativo/Edit.js"></script>